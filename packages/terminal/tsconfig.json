{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "declaration": true,
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "@presentation/*": ["./presentation/*"],
      "@domain/*": ["./domain/*"],
      "@application/*": ["./application/*"],
      "@infrastructure/*": ["./infrastructure/*"],
      "@msp/shared/*": ["../shared/src/msp-shared.tsx"]
    }
  },
  "files": ["src/msp-terminal.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
